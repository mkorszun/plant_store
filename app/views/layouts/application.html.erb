<!DOCTYPE html>
<html>
<head>
  <title>PlantStore</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar :responsive => true, :inverse => true do %>
    <%= menu_group do %>
        <a class="brand" href="#">Plant Store 2.0</a>
        <%= menu_item "Home", root_path %>
        <%= menu_item "About", plants_path %>
        <%= menu_item "Contact", plants_path %>
    <% end %>

    <%= menu_group :pull => :right do %>
        <% if user_signed_in? %>
            <%= menu_item "Change your password", edit_user_registration_path, :method => :get %>
            <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
        <% else %>
            <%= menu_item "Sign In", new_user_session_path, :method => :get %>
            <%= menu_item "Sign up", new_user_registration_path, :method => :get %>
        <% end %>
    <% end %>
<% end %>

<%= yield %>

</body>
</html>
